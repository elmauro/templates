<!DOCTYPE html>
<html>
<head>
  <title>Templates</title>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body ng-app="myapplication" class="main-body">

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Templates</a>
      </div>

      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
        <ul class="nav navbar-nav collapse navbar-collapse">
          <li data-match-route="/?(navbar)?"><a href="#/">Home</a></li>
          <li class="dropdown">
              <a href="#" class="dropdown-toggle">Configuration<b class="caret"></b></a>

              <ul class="dropdown-menu" role="menu">
                  <li data-match-route="/users"><a href="#/users">Users</a></li>
                  <li data-match-route="/applications"><a href="#/applications">Applications</a></li>
                  <li data-match-route="/areas"><a href="#/areas">Areas</a></li>
                  <li data-match-route="/tables"><a href="#/tables">Tables</a></li>
                  <li data-match-route="/columns"><a href="#/columns">Columns</a></li>
              </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container" ng-view>
   <%= yield %>
  </div>

  <script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.13.0/ui-bootstrap.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.13.0/ui-bootstrap-tpls.min.js"></script>

  <script src="//cdnjs.cloudflare.com/ajax/libs/danialfarid-angular-file-upload/4.1.3/ng-file-upload-shim.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/danialfarid-angular-file-upload/4.1.3/ng-file-upload.min.js"></script>

</body>
</html>
